{
  "name": "@dabjs/common",
  "version": "1.0.0",
  "description": "The common module from dabJS",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "clean": "tsc --build --clean",
    "build": "rimraf lib && tsc -p .",
    "prepublishOnly": "npm run build"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "all": true,
    "include": [

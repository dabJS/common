  },
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dabJS/common.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dabJS/common/issues"
  },
  "homepage": "https://github.com/dabJS/common#readme",
  "dependencies": {
    "joi": "^17.6.0",
    "node": "^17.7.2",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@types/node": "^17.0.24"
  }
}
